                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Выбрано"
                            android:textSize="12sp"
                            android:fontFamily="@font/days_one"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            />

                        <Button
