<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавьте транспортное средство"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/brandEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Марка"
            android:textSize="15sp"
            android:textStyle="italic"
            />
        <EditText
            android:id="@+id/modelEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Модель"
            android:textSize="15sp"
            android:textStyle="italic"
            />
        <EditText
            android:id="@+id/mileageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Пробег"
            android:textSize="15sp"
            android:textStyle="italic"
            />
        <EditText
            android:id="@+id/createYearEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Год выпуска"
            android:textSize="15sp"
            android:textStyle="italic"
            />
        <EditText
            android:id="@+id/vinEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="VIN"
            android:textSize="15sp"
            android:textStyle="italic"
            />
        <EditText
            android:id="@+id/fuelTypeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Тип топлива"
            android:textSize="15sp"
            android:textStyle="italic"
            />
        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Тип масла"
            android:textSize="15sp"
            android:textStyle="italic"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Госномер"
            android:textSize="15sp"
            android:textStyle="italic"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/exitCarMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Выйти"
                android:backgroundTint="#3E5F8A"
                android:layout_marginRight="120dp"
                android:textSize="11sp"
                />
            <Button
                android:id="@+id/saveCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сохранить"
                android:backgroundTint="#3E5F8A"
                android:textSize="11sp"
                />




        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>